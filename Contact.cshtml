@page
@model Contact_Form.Pages.ContactModel
@{
	ViewData["Title"] = "Contact Page";
}


<h2>Contact Form</h2>

@if(Model.hasData)
{
	<p>Hello @Model.firstName @Model.lastName</p>
	<p>We recieved your following message correctly:</p>
	<p>@Model.message</p>
}

<div class="container">
	<form method="post">
		<lebel for="fname">First Name</lebel> <br>
		<input type="text" id="fname" name="firstname"> <br>

		<lebel for="lname">Last Name</lebel> <br>
		<input type="text" id="lname" name="lastname"> <br>

		<lebel for="message">Message</lebel> <br>
		<textarea id="message" name="message" style="height:200px"></textarea> <br>

		<input type="submit" value="Submit">

	</form>

</div>